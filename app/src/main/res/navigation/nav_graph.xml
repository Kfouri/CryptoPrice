<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listFragment">
    <fragment
        android:id="@+id/listFragment"
        android:name="com.kfouri.cryptoprice.ui.ListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_open_detail"
            app:destination="@id/detailFragment" />
        <!--
        <action
            android:id="@+id/action_open_search"
            app:destination="@id/searchFragment" />
            -->
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.kfouri.cryptoprice.ui.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <action
            android:id="@+id/action_secondFragment_to_firstFragment"
            app:destination="@id/listFragment" />
        <argument
            android:name="ID"
            app:argType="integer" />
    </fragment>
    <!--
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.kfouri.brutest.ui.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <action
            android:id="@+id/action_searchFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    -->
</navigation>